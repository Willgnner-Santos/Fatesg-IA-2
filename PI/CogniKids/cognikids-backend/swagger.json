{
  "swagger": "2.0",
  "info": {
    "title": "CogniKids API",
    "description": "Documentação interativa da API CogniKids.",
    "version": "1.0.0"
  },
  "host": "localhost:5000",
  "basePath": "/api",
  "schemes": ["http"],
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Registrar novo usuário",
        "parameters": [
          {"name": "body", "in": "body", "required": true, "schema": {"type": "object"}}
        ],
        "responses": {"200": {"description": "Usuário registrado"}}
      }
    },

    "/classes": {
      "post": {
        "summary": "Criar nova turma",
        "parameters": [
          {"name": "body", "in": "body", "required": true, "schema": {"type": "object"}}
        ],
        "responses": {"201": {"description": "Turma criada"}}
      },
      "get": {
        "summary": "Listar turmas",
        "responses": {"200": {"description": "Lista de turmas"}}
      }
    },
    "/classes/{class_id}": {
      "get": {
        "summary": "Obter detalhes de uma turma",
        "parameters": [
          {"name": "class_id", "in": "path", "required": true, "type": "string"}
        ],
        "responses": {"200": {"description": "Detalhes da turma"}}
      }
    },
    "/assignments": {
      "post": {
        "summary": "Criar nova atividade",
        "parameters": [
          {"name": "body", "in": "body", "required": true, "schema": {"type": "object"}}
        ],
        "responses": {"201": {"description": "Atividade criada"}}
      }
    },
    "/classes/{class_id}/assignments": {
      "get": {
        "summary": "Listar atividades de uma turma",
        "parameters": [
          {"name": "class_id", "in": "path", "required": true, "type": "string"}
        ],
        "responses": {"200": {"description": "Lista de atividades"}}
      }
    },
    "/gallery/upload": {
      "post": {
        "summary": "Upload de criação para galeria",
        "parameters": [
          {"name": "file", "in": "formData", "required": true, "type": "file"}
        ],
        "responses": {"201": {"description": "Upload realizado"}}
      }
    },
    "/forum/topics": {
      "get": {
        "summary": "Listar tópicos do fórum",
        "responses": {"200": {"description": "Lista de tópicos"}}
      },
      "post": {
        "summary": "Criar novo tópico no fórum",
        "parameters": [
          {"name": "body", "in": "body", "required": true, "schema": {"type": "object"}}
        ],
        "responses": {"201": {"description": "Tópico criado"}}
      }
    },
    "/qa/ask": {
      "post": {
        "summary": "Enviar pergunta para QA",
        "parameters": [
          {"name": "body", "in": "body", "required": true, "schema": {"type": "object"}}
        ],
        "responses": {"201": {"description": "Pergunta enviada"}}
      }
    },
    "/iot/data": {
      "post": {
        "summary": "Enviar dados do dispositivo IoT",
        "parameters": [
          {"name": "body", "in": "body", "required": true, "schema": {"type": "object"}}
        ],
        "responses": {"201": {"description": "Dados recebidos"}}
      }
    }
  }
}
